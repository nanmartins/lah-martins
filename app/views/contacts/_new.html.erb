
<%= form_with model: @contact, local: true do |form| %>
  <% if @contact %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> impediram que a mensagem fosse enviada</h2>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
